<?xml version='1.0' encoding='utf-8'?>
<widget id="com.plaguelabs.plaguemoncompanion" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Plaguemon Companion</name>
    <description>
        A companion for your favourite gb game!
    </description>
    <author email="acavallaro.ge@gmail.com" href="https://shop.plaguelabs.com/">
        Plaguelabs
    </author>
    <content src="index.html" />
    <access origin="*" />
